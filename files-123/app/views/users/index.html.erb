<div class='row'>
	<h3 class="card-title titletext"> LEADERBOARD </h3>
</div>

<div class='row'>
	<div class="col-3"></div>
	<div class="col" id="Leaderboard"></div>
	<div class="col-3"></div>
</div>

<div class='row'>
  <div class="col" style='text-align: center'>
    <button class="col-2 btn btn-outline-dark mt-3 titletext" id="LeaderboardRefresh">REFRESH</div>
  </div>
</div>

<script type="text/template" id="LeaderboardHeaderTemplate">
	<div class='SimpleHref'>
		<div style="padding: 10px; font-weight: lighter" class='row'>
			<div style="margin-left: 15px ;margin-right: 5px; width: 50px">
				Pos.
			</div>
			<div class='col-7'>
				User
			</div>
			<div class='col center_align'>
				Wins
			</div>
			<div class='col center_align'>
				Loses
			</div>
			<div class='col center_align'>
				Score
			</div>
		</div>
	</div>
</script>

<script type="text/template" id="LeaderboardListElTemplate">
	<a href='/profile/<%%= id %>' class='SimpleHref'>
		<div id="LeaderboardNameList" style="padding: 10px; font-weight: lighter" class='row'>
			<div style="margin-left: 15px ;margin-right: 5px; width: 50px">
				<%%= position %>.
			</div>
			<div class='col-7'>
				<img width="30" height="30" class="rounded-circle" src=<%%= avatar.url %>>
				<%%= nickname %>
			</div>
			<div class='col center_align'>
				<%%= wins %>
			</div>
			<div class='col center_align'>
				<%%= loses %>
			</div>
			<div class='col center_align'>
				<%%= score %>
			</div>
		</div>
	</a>
</script>

<%= javascript_pack_tag 'leaderboard' %>
