<h4>Enable 2 factor authentication</h4>
<% if !current_user.otp_required_for_login %>
  <%= form_with model: @user, url: "enable_otp", method: :post do |f| %>
    <div class="row">
      <div class="col-3">
        <%= f.submit "Enable 2FA" %>
    </div>
  <% end %>
<% end %>
<% if current_user.otp_required_for_login %>
  <%= form_with model: @user, url: "disable_otp", method: :post do |f| %>
    <div class="row">
      <div class="col-3">
        <%= f.submit "Disable 2FA" %>
    </div>
  <% end %>
  <div class="col-4 text-center">
    <%= current_user.otp_qr_code.html_safe %>
  </div>
  <br>
<% end %>

<br>
<br>

<h4>Change nickname</h4>
<%= form_with model: @user, url: "update_nickname", method: :post do |f| %>
<div class="row">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="col-9">
    <%= f.text_field :nickname %>
  <div class="col-3">
    <%= f.submit "Update nickname" %>
</div>
<% end %>

<br>
<br>

<h4>Change avatar</h4>
<%= form_with model: @user, url: "update_avatar", method: :post, html: { multipart: true } do |f| %>
<div class="row">

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="col-9">
    <%= f.file_field :avatar %>
  <div class="col-3">
    <%= f.submit "Update avatar" %>
</div>
<% end %>

