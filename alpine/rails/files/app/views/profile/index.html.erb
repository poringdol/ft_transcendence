<!-- 
	GUILD CARD TEMPLATE 
-->
<script type="text/template" id="UserGuildTemplate">
	<div class="card">
		<div class="card-body" id="UserGuildCardBody">
			<h5 class="card-title">GUILD</h5>
		</div>
		<div class="list-group list-group-flush" id="list-tab" role="tablist">
