<div class='row justify-content-center' id="UserProfilePage">
	<div class='col-3' id='UserInfo'></div>
	<div class='col-6' >
		<div class='row' id='UserFriends'></div>
		<div class='row' id='UserTournaments'></div>
	</div>
	<%# <div class='col-3' id='UserInfo'></div>
	<div class='col-5' style="min-width: 500px">
		<div class='row' id='UserFriends'></div>
		<div class='row' id='UserTournaments'></div>
