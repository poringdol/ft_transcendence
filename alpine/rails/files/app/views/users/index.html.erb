<div class='row'>
	<div class="col-2"></div>
	<div class="col-8" id="Leaderboard"></div>
	<div class="col-2"></div>
</div>
<div class='row'>
	<div class="col-2"></div>
	<div class="col-8">
		<div class="col-2 btn btn-outline-dark mt-3" id="LeaderboardRefresh">Refresh</div>
	</div>
	<div class="col-2"></div>
</div>
<script type="text/template" id="LeaderboardListElTemplate">
	<a href='/profile/<%%= id %>' class='SimpleHref'>
		<div id="LeaderboardNameList" style="padding: 10px" class='row'>
			<div style="margin-right: 5px; width: 50px">
				<%%= position %>.
			</div>
			<div class='col'>
				<img width="30" height="30" class="rounded-circle" src=<%%= avatar.url %>>
				<%%= nickname %>
				<%%= score %>
			</div>
		</div>
	</a>
</script>


<%= javascript_pack_tag 'leaderboard' %>
