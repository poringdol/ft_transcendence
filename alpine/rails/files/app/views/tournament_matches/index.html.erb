<p id="notice"><%= notice %></p>

<h1>Tournament Matches</h1>

<table>
  <thead>
    <tr>
      <th>Tournament</th>
      <th>Match</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tournament_matches.each do |tournament_match| %>
      <tr>
        <td><%= tournament_match.tournament_id %></td>
        <td><%= tournament_match.match_id %></td>
        <td><%= link_to 'Show', tournament_match %></td>
        <td><%= link_to 'Edit', edit_tournament_match_path(tournament_match) %></td>
        <td><%= link_to 'Destroy', tournament_match, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tournament Match', new_tournament_match_path %>
