<p id="notice"><%= notice %></p>

<h1>Addons</h1>

<table>
  <thead>
    <tr>
      <th>Addon1</th>
      <th>Addon2</th>
      <th>Addon3</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addons.each do |addon| %>
      <tr>
        <td><%= addon.addon1 %></td>
        <td><%= addon.addon2 %></td>
        <td><%= addon.addon3 %></td>
        <td><%= link_to 'Show', addon %></td>
        <td><%= link_to 'Edit', edit_addon_path(addon) %></td>
        <td><%= link_to 'Destroy', addon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Addon', new_addon_path %>

