<%= form_with model: @user, url: users_auth_marvin_twofa_url, method: :post do |f| %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= f.hidden_field :user_id, value: @user.id %>

  <div class="form-group mb-3 col-3 centr-block">
    <%= f.text_field :otp_attempt, class: 'form-control', placeholder: "OTP attempt" %>
  </div>
  <div class="form-group mb-3 centr-block">
    <%= f.submit "Log in", class: "btn btn-outline-primary btn-block d-block mx-auto" %>
  </div>
<% end %>

