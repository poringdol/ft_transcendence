<!DOCTYPE html>
<html>

<head>
  <title>Pingpong</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_pack_tag 'application', media: 'all' %>
  <%= javascript_pack_tag 'application' %>
  <%= favicon_link_tag asset_path('sber.png') %>

</head>

<body>
  <% if user_signed_in? && current_user.is_banned? %>
    <div class="all_page">
      <%= render 'layouts/banned' %>
      <div id="BlockPage" class="content">
  <% elsif user_signed_in? %>
    <div class="all_page">
      <%= render 'layouts/navbar' %>
      <div class="content">

  <% end %>
      <div data-behavior="devise-error-messages" class='titletext'>
        <%= render "devise/shared/error_messages", resource: resource, class: 'titletext' %>
      </div>
      <div data-behavior="flashes" class='titletext'>
        <%= render partial: "layouts/flashes", local: { flash: flash }, class: 'titletext' %>
      </div>

      <%= yield %>
      </div>
    </div>

  <% if user_signed_in? %>
    <%= render 'layouts/footer' %>
  <% end %>
  <%= %>
</body>

<%= javascript_pack_tag 'index' %>
</html>
